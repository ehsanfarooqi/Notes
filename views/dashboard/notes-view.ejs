<div class="container-fluid bp-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a
              href="/dashboard"
              style="text-decoration: none; border: none; color: darkgray"
              >Dashboard</a
            >
          </li>
          <li class="breadcrumb-item"><%= note.title %></li>
        </ol>
      </nav>
      <div class="col d-flex justify-content-between aling-item-center">
        <h2>View Notes</h2>
        <button
          type="button"
          class="btn btn-danger me-2"
          data-bs-toggle="modal"
          id="deleteButton"
          data-bs-target="#deleteModal"
        >
          Delete
        </button>
      </div>
    </div>
  </div>
  <form
    action="/dashboard/item/<%= noteId %>"
    method="POST"
    class="position-relative"
  >
    <div
      class="form-group mb-4 position-absolute"
      style="left: 1px; top: 1px; right: 1px"
    >
      <input
        type="text"
        class="form-control fw-bold border-0 fs-4"
        id="title"
        name="title"
        value="<%= note.title %>"
        placeholder="Title"
      />
    </div>

    <div class="form-group mb-4">
      <textarea
        class="form-control pt-5 fs-4"
        name="body"
        id="body"
        rows="10"
        placeholder="Take a Note..."
      >
<%= note.body %></textarea
      >
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-secondary btn-lg">Update</button>
    </div>
  </form>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title" style="color: #3c4245">
          You are about to remove a Note record.
        </div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p style="color: #3c4245">
          This will remove the Note record of
          <b class="fw-bold"><%= note.title %></b><br />
          Are Your sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/edit/<%= note._id %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-danger">Yes, Remove Note</button>
        </form>
      </div>
    </div>
  </div>
</div>
